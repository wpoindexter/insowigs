.row
  .breadcrumbDiv.col-lg-12
    %ul.breadcrumb
      %li= link_to 'Home', root_path
      %li.active Change Your Password
.row
  .col-lg-9.col-md-9.col-sm-7
    %h1.section-title-inner
      %span
        %i.fa.fa-lock &nbsp;Change Your Password
    .row.userInfo
      .col-xs-12.col-sm-6
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'logForm'}) do |f|
          = f.hidden_field :reset_password_token
          - unless resource.errors.empty?
            .alert.alert-danger.alert-dismissable
              = devise_error_messages!
          .form-group
            = f.label :password, 'New Password'
            = f.password_field :password, class: 'form-control', placeholder: 'Enter New Password', autofocus: true, autocomplete: 'off', required: ''
          .form-group
            = f.label :password, 'Confirm Password'
            = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter Password Confirmation', autofocus: true, autocomplete: 'off', required: ''
          .form-group
            %p
              = f.submit 'CHANGE MY PASSWORD', class: 'btn btn-block btn-lg btn-primary'
        %p.text-center
          First time here?
          = link_to 'SIGN UP', new_registration_path(resource_name)
        %p.text-center
          Forgot your password?
          = link_to 'CLICK HERE', new_password_path(resource_name)
        %p.text-center
          Didn't receive confirmation instructions?
          = link_to 'RESEND', new_confirmation_path(resource_name)